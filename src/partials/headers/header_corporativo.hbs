<div class="header-corp">
    <div class="logo-area">
        {{#if logoUrl}}
            <img src="{{logoUrl}}" alt="Logo" style="height: 60px;" />
        {{/if}}
    </div>
    <div class="company-info">
        <h1 class="company-name">{{empresaNome}}</h1>
        <p class="document-title">{{documentoTitulo}}</p>
        <p class="meta-info">Gerado em: {{dataAtual}} | Ref: #{{referencia}}</p>
    </div>
</div>
<hr class="header-divider" />

<style>
    .header-corp { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
    .company-info { text-align: right; }
    .company-name { margin: 0; font-size: 24px; color: #333; text-transform: uppercase; }
    .document-title { margin: 5px 0; font-size: 14px; color: #666; }
    .meta-info { font-size: 10px; color: #999; }
    .header-divider { border: 0; border-top: 2px solid #0056b3; margin-bottom: 30px; }
</style>