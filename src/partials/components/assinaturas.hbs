<div class="signatures-container no-break">
  {{#each assinantes}}
    <div class="signature-box no-break">
      <div class="line"></div>
      <p class="name"><strong>{{nome}}</strong></p>
      <p class="role">{{cargo}}</p>
      {{#if documento}}
        <p class="doc-id">CPF/CNPJ: {{documento}}</p>
      {{/if}}
    </div>
  {{/each}}
</div>

<style>
  .signatures-container { display: flex; justify-content: space-around;
  margin-top: 24px; margin-bottom: 24px; flex-wrap: wrap; gap: 20px;
  page-break-inside: avoid; /* Evita que o container seja quebrado entre p√°ginas
  */ break-inside: avoid; } .signature-box { text-align: center; min-width:
  200px; margin-bottom: 20px; page-break-inside: avoid; break-inside: avoid; }
  .signature-box .line { border-top: 1px solid #000; width: 100%; margin-bottom:
  10px; } .signature-box p { margin: 2px 0; font-size: 12px; } .signature-box
  .name { text-transform: uppercase; }
</style>